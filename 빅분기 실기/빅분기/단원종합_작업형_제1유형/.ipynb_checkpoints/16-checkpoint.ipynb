    "import pandas as pd\n",
    "\n",
    "df = pd.read_csv('./data/iris.csv')\n",
    "\n",
    "df1 = df[df['Species'] == 'virginica'].copy()\n",
    "df1['Len'] = df1.loc[:, 'Sepal.Length'].map(lambda x : 1 if x > 6 else 0)\n",
    "df1['Len2'] = df1.apply(lambda x : 1 if x['Sepal.Length'] > 6 else 0, axis=1)\n",
    "\n",
    "print(df1['Len'].sum())"
   ]
  }
